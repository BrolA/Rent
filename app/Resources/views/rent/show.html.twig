{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rent</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rent.id }}</td>
            </tr>
            <tr>
                <th>Car</th>
                <td>{{ rent.car }}</td>
            </tr>
            <tr>
                <th>Client</th>
                <td>{{ rent.client }}</td>
            </tr>
            <tr>
                <th>Datawypozyczenia</th>
                <td>{% if rent.dataWypozyczenia %}{{ rent.dataWypozyczenia|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dataoddania</th>
                <td>{% if rent.dataOddania %}{{ rent.dataOddania|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Kwotaodklienta</th>
                <td>{{ rent.kwotaOdKlienta }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('rent_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('rent_edit', { 'id': rent.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
