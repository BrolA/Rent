{% extends 'base.html.twig' %}

{% block body %}
    <h1>Opinion list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Tytul</th>
                <th>Datadodania</th>
                <th>Opinia</th>
                <th>Cars</th>
                <th>Clients</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for opinion in opinions %}
            <tr>
                <td><a href="{{ path('opinion_show', { 'id': opinion.id }) }}">{{ opinion.id }}</a></td>
                <td>{{ opinion.tytul }}</td>
                <td>{% if opinion.dataDodania %}{{ opinion.dataDodania|date('Y-m-d') }}{% endif %}</td>
                <td>{{ opinion.opinia }}</td>
                <td>{{ opinion.car }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('opinion_show', { 'id': opinion.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('opinion_edit', { 'id': opinion.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('opinion_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
