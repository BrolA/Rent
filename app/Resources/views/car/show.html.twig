{% extends 'base.html.twig' %}

{% block body %}
    <h1>Car</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Zdjecie</th>
                <td>{{ car.zdjecie }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Kategoria</th>
                <td>{{ car.kategoria }}</td>
            </tr>
            <tr>
                <th>Kolor</th>
                <td>{{ car.kolor }}</td>
            </tr>
            <tr>
                <th>Cenadoba</th>
                <td>{{ car.cenaDoba }}</td>
            </tr>
            <tr>
                <th>Wypozyczony</th>
                <td>{% if entity.wypozyczony %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('car_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('car_edit', { 'id': car.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
