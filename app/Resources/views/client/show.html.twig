{% extends 'base.html.twig' %}

{% block body %}
    <h1>Client</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Imie</th>
                <td>{{ client.imie }}</td>
            </tr>
            <tr>
                <th>Nazwisko</th>
                <td>{{ client.nazwisko }}</td>
            </tr>
            <tr>
                <th>Rents</th>
                <td>{{ client.rents }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ client.comments }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('client_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('client_edit', { 'id': client.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
